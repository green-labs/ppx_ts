  "version": "0.2.0",
  "configurations": [
    {
      "name": "OCaml Debug",
      "type": "ocamlearlybird",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/_build/default/bin/bin.bc",
      "stopOnEntry": false,
      "yieldSteps": 4096,
      "onlyDebugGlob": "<${workspaceFolder}/**/*>",
      "cwd": "${workspaceFolder}"
    }
  ]
}